{
    "manifest_version": 2,

    "name": "Screamer - Twitter Improvement Suite",
    "description": "Taking the social out of social media, and the media part for that matter too...",
    "version": "1.0",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://twitter.com/*"],
            "js": ["bundle.js"]
        }
    ],
    "web_accessible_resources": ["images/aaaaaaaaaaaaaaaaa.png", "images/loading.gif"]
}
